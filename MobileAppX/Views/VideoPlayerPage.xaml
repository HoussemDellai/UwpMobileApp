                               TextWrapping="Wrap"
                               FontWeight="Thin" />
                    <TextBlock Text=" | "
                               FontWeight="Thin" />
                    <TextBlock Text="{Binding SelectedYoutubeVideo.Duration, Converter={StaticResource TimeSpanToTimeSpanFormatConverter}}"
